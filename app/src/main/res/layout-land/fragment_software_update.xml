<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".updatescreen.softwareupdate.SoftwareUpdateFragment"
    android:background="#000000"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/soft_updt_txt"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Software Update"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp"
        android:textColor="#ffffff"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
    <Button
        android:id="@+id/check_update_btn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Check for updates"
        android:background="#D3D3D3"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:textColor="#000000"
        android:layout_weight="1"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        />
        <Button
            android:id="@+id/install_update_btn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Install Update"
            android:background="#424242"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="50dp"
            android:textColor="#000000"
            android:layout_weight="1"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
    <TextView
        android:id="@+id/current_version_txt"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Current Version:"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp"
        android:textColor="#ffffff"
        android:layout_weight="1"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"/>
        <TextView
            android:id="@+id/current_version_no_text"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="25dp"
            android:text="1.0"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="100dp"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:textAlignment="textStart"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
    <TextView
        android:id="@+id/update_available_text"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Update available:"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:textColor="#ffffff"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/available_version_no_text"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="25dp"
        android:text=""
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:textColor="#ffffff"
        android:layout_weight="1"
        android:textAlignment="textStart"/>
    </LinearLayout>
</LinearLayout>